{
  "manifest_version": 3,
  "name": "SmartContractRiskAnalyzer",
  "version": "1.0",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "thankyou.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
      {
        "resources": ["ace-interaction.js"],
        "matches": ["<all_urls>"],
        "run_at": "document_end"
      }
    ]
}
